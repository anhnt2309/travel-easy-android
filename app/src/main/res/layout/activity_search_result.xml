                            android:layout_height="90dp"
                            android:layout_centerInParent="true"
                            app:wheel_max_process="24"
                            app:wheel_pointer_color="@color/app_primary_color"
                            app:wheel_pointer_radius="8dp"
                            app:wheel_reached_color="@color/blue"
                            app:wheel_reached_width="20dp"
                            app:wheel_unreached_color="@color/light_gray" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_return_time_from"
                            style="@style/text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginRight="5dp"
                            android:text="00:00"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_clock" />

                        <TextView
                            android:id="@+id/tv_return_time_to"
                            style="@style/text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="5dp"
                            android:text="00:00"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/tv_filter_title"
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"
            android:text="Lọc Chuyến Bay"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_total_flight"
            style="@style/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6">

        <RelativeLayout
            android:id="@+id/grpHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/shine_button_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:src="@android:color/darker_gray"
                app:allow_random_color="false"
                app:big_shine_color="@color/app_primary_color"
                app:btn_color="@android:color/darker_gray"
                app:btn_fill_color="@color/app_primary_color"
                app:click_animation_duration="200"
                app:enable_flashing="false"
                app:shine_animation_duration="1500"
                app:shine_count="8"
                app:shine_turn_angle="10"
                app:siShape="@raw/ic_back"
                app:small_shine_color="@color/page3"
                app:small_shine_offset_angle="20" />

            <TextView
                style="@style/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/result_header_string"
                android:textSize="25sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/grpHeader"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp"
            android:fadeScrollbars="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollbars="vertical"
            tools:listitem="@layout/item_airport_search">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/temp_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/grpResultInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="200"
                android:background="@drawable/cloud_bg_immersive"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.sackcentury.shinebuttonlib.ShineButton
                        android:id="@+id/shine_button_filter"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:src="@android:color/white"
                        app:allow_random_color="false"
                        app:big_shine_color="@color/white"
                        app:btn_color="@android:color/black"
                        app:btn_fill_color="@color/app_primary_color"
                        app:click_animation_duration="200"
                        app:enable_flashing="false"
                        app:shine_animation_duration="1500"
                        app:shine_count="8"
                        app:shine_turn_angle="10"
                        app:siShape="@raw/ic_filter"
                        app:small_shine_color="@color/page3"
                        app:small_shine_offset_angle="20"
                        app:view_behavior=".ParallaxTitleBehaviour" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/shine_button_filter"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/grp_result_origin_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_result_origin_code"
                                style="@style/text_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:layout_marginLeft="0dp"
                                android:text="@string/code_holder"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_result_origin_airport"
                            style="@style/text_subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="35dp"
                            android:maxLines="2"
                            android:text="@string/choose_airport"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/shine_button_filter"
                        android:gravity="center"
                        android:paddingLeft="20dp">

                        <LinearLayout
                            android:id="@+id/grp_result_des_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_result_des_code"
                                style="@style/text_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:layout_marginLeft="10dp"
                                android:text="@string/code_holder"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_result_des_airport"
                            style="@style/text_subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="35dp"
                            android:maxLines="2"
                            android:text="@string/choose_airport"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/app_primary_color">

            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100"
                android:background="@color/white">

                <View
                    android:id="@+id/result_metadata_divider"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@color/app_primary_color">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@id/result_metadata_divider"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginTop="0dp"
                            android:text="@string/departure_date"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_result_depart_date"
                            style="@style/text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginTop="1dp"
                            android:text="Thứ 2,20 tháng 11"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/grpReturn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginTop="0dp"
                            android:text="@string/return_date"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_result_return_date"
                            style="@style/text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginTop="1dp"
                            android:text="Thứ 2,27 tháng 11"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/result_metadata_divider"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_class"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/ic_class" />

                        <TextView
                            android:id="@+id/tv_class"
                            style="@style/text_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/img_class"
                            android:text="Economy Class"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/ic_currency" />

                        <TextView
                            android:id="@+id/tv_currency"
                            style="@style/text_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/img_currency"
                            android:text="VND"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/img_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/tv_currency"

                            android:src="@mipmap/ic_flight_type" />

                        <TextView
                            android:id="@+id/tv_type"
                            style="@style/text_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="2sp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/img_type"
                            android:text="Khứ hồi"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <ImageView
                                android:id="@+id/img_adults"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="2"
                                android:src="@mipmap/ic_adult" />

                            <TextView
                                android:id="@+id/tv_adults"
                                style="@style/text_subtitle_color"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="3dp"
                                android:layout_marginLeft="0dp"
                                android:layout_toRightOf="@id/img_adults"

                                android:layout_weight="1"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <ImageView
                                android:id="@+id/img_childrens"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/tv_adults"
                                android:layout_weight="2"
                                android:src="@mipmap/ic_children" />

                            <TextView
                                android:id="@+id/tv_childrens"
                                style="@style/text_subtitle_color"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:layout_marginLeft="0dp"
                                android:layout_toRightOf="@id/img_childrens"

                                android:layout_weight="1"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <ImageView
                                android:id="@+id/img_infants"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/tv_childrens"
                                android:layout_weight="2"
                                android:src="@mipmap/ic_infants" />

                            <TextView
                                android:id="@+id/tv_infants"
                                style="@style/text_subtitle_color"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:layout_marginLeft="0dp"
                                android:layout_toRightOf="@id/img_infants"
                                android:layout_weight="1"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/grpFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/app_primary_color"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.httt.uit.travel_easy_android.RectangleWithCapCircleView
            android:id="@+id/semicircle_page4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            app:view_behavior=".AnimationLaunch" />

        <LinearLayout
            android:id="@+id/grp_filter_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shadow_bg_color_full_page3">

            <TextView
                style="@style/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="@string/apply_string"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/grp_filter_apply"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/semicircle_page4"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/text_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/flight_type"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/grpNonStopFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginRight="10dp"
                        android:text="Chuyến bay thẳng"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_nonstop_detail"
                        style="@style/text_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:text="@string/filter_count"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>


                <com.mahfa.dnswitch.DayNightSwitch
                    android:id="@+id/switch_nonstop"
                    android:layout_width="76dp"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/grpHasStopFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginRight="10dp"
                        android:text="Có trạm dừng"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_hasstop_detail"
                        style="@style/text_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:text="@string/filter_count"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.mahfa.dnswitch.DayNightSwitch
                    android:id="@+id/switch_hasstop"
                    android:layout_width="76dp"
                    android:layout_height="40dp" />
            </LinearLayout>

            <TextView
                style="@style/text_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="10dp"
                android:text="@string/filter_price"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <co.ceryle.radiorealbutton.RadioRealButtonGroup
                android:id="@+id/rbg_price"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shadow_bg_color_full"
                android:elevation="2dp"
                app:rrbg_animateDrawables_enter="overshoot"
                app:rrbg_animateDrawables_exit="overshoot"
                app:rrbg_animateDrawables_scale="1.2"
                app:rrbg_animateDrawables_tintColorFrom="@color/white"
                app:rrbg_animateDrawables_tintColorTo="@android:color/transparent"
                app:rrbg_animateDrawables_tintColor_duration="500"
                app:rrbg_animateTexts_enter="overshoot"
                app:rrbg_animateTexts_textColorFrom="@color/white"
                app:rrbg_animateTexts_textColorTo="@color/black"
                app:rrbg_animateTexts_textColor_duration="500"
                app:rrbg_backgroundColor="@android:color/transparent"
                app:rrbg_borderColor="@color/transparent"
                app:rrbg_dividerColor="@color/white"
                app:rrbg_dividerRadius="1dp"
                app:rrbg_dividerSize="2dp"
                app:rrbg_radius="40dp"
                app:rrbg_selectorAboveOfBottomLine="false"
                app:rrbg_selectorAnimationType="translate_y"
                app:rrbg_selectorColor="@color/white"
                app:rrbg_selectorRadius="40dp"
                app:rrbg_selectorSize="8dp">

                <co.ceryle.radiorealbutton.RadioRealButton
                    android:id="@+id/rb_little_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_drawable="@drawable/ic_money_little"
                    app:rrb_drawableHeight="30dp"
                    app:rrb_drawableWidth="30dp"
                    app:rrb_rippleColor="@color/app_primary_color"
                    app:rrb_selectorColor="@color/transparent"
                    app:rrb_text="...500k"
                    app:rrb_textColor="@color/white"
                    app:rrb_textSize="10sp"
                    app:rrb_textStyle="bold" />

                <co.ceryle.radiorealbutton.RadioRealButton
                    android:id="@+id/rb_medium_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_drawable="@drawable/ic_medium_money"
                    app:rrb_drawableHeight="30dp"
                    app:rrb_drawablePadding="3dp"
                    app:rrb_drawableWidth="30dp"
                    app:rrb_rippleColor="@color/app_primary_color"
                    app:rrb_selectorColor="@color/transparent"
                    app:rrb_text="500k...5500k"
                    app:rrb_textColor="@color/white"
                    app:rrb_textSize="10sp"
                    app:rrb_textStyle="bold" />

                <co.ceryle.radiorealbutton.RadioRealButton
                    android:id="@+id/rb_large_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_drawable="@drawable/ic_large_money"
                    app:rrb_drawableHeight="30dp"
                    app:rrb_drawableWidth="30dp"
                    app:rrb_rippleColor="@color/app_primary_color"
                    app:rrb_selectorColor="@color/transparent"
                    app:rrb_text="5500k..."
                    app:rrb_textColor="@color/white"
                    app:rrb_textSize="10sp"
                    app:rrb_textStyle="bold" />

                <co.ceryle.radiorealbutton.RadioRealButton
                    android:id="@+id/rb_all_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_checked="true"
                    app:rrb_drawable="@drawable/ic_all_money"
                    app:rrb_drawableHeight="36dp"
                    app:rrb_drawablePadding="3dp"
                    app:rrb_drawableWidth="36dp"
                    app:rrb_rippleColor="@color/app_primary_color"
                    app:rrb_selectorColor="@color/transparent"
                    app:rrb_text="Tất cả"
                    app:rrb_textColor="@color/white"
                    app:rrb_textSize="10sp"

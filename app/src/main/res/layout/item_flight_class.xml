<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/shadow_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_class_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_economy" />

    <View
        android:id="@+id/devider"
        android:layout_width="2dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/img_class_icon"
        android:background="@color/light_gray_inactive_icon"></View>

    <LinearLayout
        android:id="@+id/grpDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/devider"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_class_eng"
            style="@style/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:paddingTop="3dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="Economy Class" />

        <TextView
            android:id="@+id/tv_class_vn"
            style="@style/text_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="12dp"
            tools:text="Hạng Phổ Thông" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:layout_marginTop="15dp"
        android:rotation="0"
        android:src="@mipmap/ic_double_down" />


</RelativeLayout>